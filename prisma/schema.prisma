// Unity Vault Bot - PostgreSQL schema
// Run: npx prisma generate && npx prisma db push (or migrate deploy)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GuildConfig {
  id                    String   @id
  logChannelId          String?
  ticketCategoryId      String?
  supportRoleIds        String   @default("") // comma-separated role IDs
  onboardingChannelId   String?
  ticketCounter         Int      @default(0)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  tickets               Ticket[]
}

model Ticket {
  id            String       @id @default(cuid())
  guildId       String
  channelId     String       @unique
  userId        String
  type          TicketType
  status        TicketStatus @default(Open)
  subject       String?
  description   String?      @db.Text
  escalatedAt   DateTime?
  closedAt      DateTime?
  closedBy      String?
  transcriptUrl String?      @db.Text
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  guild         GuildConfig? @relation(fields: [guildId], references: [id], onDelete: Cascade)

  @@index([guildId, status])
  @@index([userId])
}

enum TicketType {
  support
  report
  partnership
  suggestion
}

enum TicketStatus {
  Open
  Reopened
  Escalated
  Closed
}

model InteractionState {
  id          String   @id @default(cuid())
  customId    String
  payload     String   @db.Text // JSON: { type, guildId, userId, ... }
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  @@index([customId])
  @@index([expiresAt])
}

model RateLimitEntry {
  id        String   @id @default(cuid())
  key       String   // e.g. "cmd:ping:userId" or "ticket:create:userId"
  count     Int      @default(1)
  windowEnd DateTime
  createdAt DateTime @default(now())

  @@unique([key])
  @@index([windowEnd])
}
